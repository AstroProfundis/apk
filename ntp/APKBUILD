# Contributor: Lukas Fleischer <lfleischer@archlinux.org>
# Contributor: Gaetan Bisson <bisson@archlinux.org>
# Contributor: kevin <kevin@archlinux.org>

pkgname=ntp
_pkgname=ntp #-dev
_pkgver=4.2.8p10
pkgver=${_pkgver/p/.p}
pkgrel=2
pkgdesc='Network Time Protocol reference implementation'
url='http://www.ntp.org/'
license="custom"
arch="x86 x86_64"
depends="libressl libcap libedit"
makedepends="libcap-dev libedit-dev libressl-dev"
backup="etc/ntp.conf"
source="https://www.eecis.udel.edu/~ntp/ntp_spool/ntp4/ntp-4.2/${_pkgname}-${_pkgver}.tar.gz
	libressl-support.patch::http://bugs.ntp.org/attachment.cgi?id=1525
        ntp.conf
        ntpd
        ntp-client"
options="!check"
install="ntp.pre-install ntp.post-upgrade"
subpackages="$pkgname-doc"

prepare() {
	cd "${srcdir}/${_pkgname}-${_pkgver}"
	patch -Np1 -i ../libressl-support.patch
}

build() {
	cd "${srcdir}/${_pkgname}-${_pkgver}"
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--enable-linuxcaps \
		--enable-ntp-signd \
		|| return 1

	make || return 1
}

package() {
	cd "${srcdir}/${_pkgname}-${_pkgver}"

	make DESTDIR="${pkgdir}" install

	install -Dm644 ../ntp.conf "${pkgdir}"/etc/ntp.conf
	install -Dm755 ../ntpd "${pkgdir}"/etc/init.d/ntp
	install -Dm755 ../ntp-client "${pkgdir}"/etc/init.d/ntp-client
	install -Dm644 COPYRIGHT "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

	install -d -o 87 "${pkgdir}"/var/lib/ntp
	echo > "${pkgdir}/var/lib/ntp/.placeholder"
}
